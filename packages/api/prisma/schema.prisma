generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String             @id @default(uuid())
  email               String             @unique
  bio                 String?
  profilePicture      String?
  banner              String?
  name                String?
  minecraftAuthToken  String
  minecraftPlayerData Json?
  role                Role               @default(USER)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  myProperties        Property[]
  PropertyRequests    PropertyRequests[]
}

model Property {
  id          String       @id @default(uuid())
  name        String
  description String
  documentId  String
  type        PropertyType
  location    String
  value       Float
  shares      Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      String?
  user        User?        @relation(fields: [userId], references: [id])
}

model PropertyRequests {
  id                String        @id
  entity            String
  minecraftPlayerId String
  status            RequestStatus @default(PENDING)
  userId            String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime
  User              User?         @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  LAND
  MULTI_FAMILY
  OFFICE_BUILDING
  RETAIL
  MIXED_USE
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model Document {
  id           String   @id @default(uuid())
  fileId       String   @unique // SHA256 hash from storage service
  fileName     String
  cid          String?  // IPFS Content Identifier (null until pinned)
  ipfsUrl      String?  // Full IPFS gateway URL (null until pinned)
  fileSize     Int
  mimeType     String
  uploadedBy   String   // User ID who uploaded
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  pinned       Boolean  @default(false)
  pinnedAt     DateTime?
}
