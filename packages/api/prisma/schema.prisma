generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  bio            String?
  profilePicture String?
  banner         String?
  name           String?
  myProperties   Property[]
  role           Role       @default(USER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Property {
  id          String       @id @default(uuid())
  name        String
  description String
  documentId  String
  type        PropertyType
  location    String
  value       Float
  shares      Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
}

enum Role {
  ADMIN
  USER
}

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  LAND
  MULTI_FAMILY
  OFFICE_BUILDING
  RETAIL
  MIXED_USE
}
