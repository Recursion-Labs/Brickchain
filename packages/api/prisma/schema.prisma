generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  email               String               @unique
  bio                 String?
  profilePicture      String?
  banner              String?
  name                String?
  minecraftAuthToken  String               @default(cuid())
  minecraftPlayerData Json?
  myProperties        Property[]
  requestedProperties PropertyRequests[]
  role                Role                 @default(USER)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  
  // Marketplace relations
  walletAddress       String?              @unique // Blockchain wallet address
  listings            MarketplaceListing[]
  bids                Bid[]
}

model PropertyRequests {
  id                String        @id @default(uuid())
  entity            String
  minecraftPlayerId String
  status            RequestStatus @default(PENDING)
  stage             RequestStage  @default(STAGE_1)
  user              User?         @relation(fields: [userId], references: [id])
  userId            String?
  images            images[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model images {
  id                 String            @id @default(uuid())
  url                String
  propertyRequests   PropertyRequests? @relation(fields: [propertyRequestsId], references: [id])
  propertyRequestsId String?
  property           Property?         @relation(fields: [propertyId], references: [id])
  propertyId         String?
}

model Property {
  id          String       @id @default(uuid())
  name        String
  description String
  documentId  String
  type        PropertyType
  location    String
  value       Float
  shares      Int
  gallery     images[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
  
  // Marketplace fields
  propertyId   String?              @unique // On-chain property ID
  owner        String?              // Wallet address
  valuation    String?              // Property valuation
  status       PropertyStatus?      @default(ACTIVE)
  locationHash String?              // IPFS hash for location data
  documentHash String?              // IPFS hash for documents
  listings     MarketplaceListing[]
}

model MarketplaceListing {
  id         String        @id @default(uuid())
  listingId  String        @unique // On-chain listing ID
  propertyId String        // On-chain property ID
  property   Property      @relation(fields: [propertyDbId], references: [id])
  propertyDbId String
  seller     User          @relation(fields: [sellerId], references: [id])
  sellerId   String
  price      String        // Price in smallest unit
  status     ListingStatus @default(ACTIVE)
  expiresAt  DateTime
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  bids       Bid[]
}

model Bid {
  id        String    @id @default(uuid())
  listing   MarketplaceListing @relation(fields: [listingId], references: [id])
  listingId String
  bidder    User      @relation(fields: [bidderId], references: [id])
  bidderId  String
  amount    String    // Bid amount in smallest unit
  status    BidStatus @default(PENDING)
  message   String?   // Optional message from bidder
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  LAND
  MULTI_FAMILY
  OFFICE_BUILDING
  RETAIL
  MIXED_USE
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RequestStage {
  STAGE_1
  STAGE_2
  STAGE_3
}

enum PropertyStatus {
  ACTIVE
  SOLD
  CANCELLED
}

enum ListingStatus {
  ACTIVE
  SOLD
  CANCELLED
  EXPIRED
}

enum BidStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
  EXPIRED
}
