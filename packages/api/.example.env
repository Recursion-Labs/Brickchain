# Example environment variables for BrickChain API
# Copy this file to .env and fill real values before running the API.

# Server
PORT=3000
NODE_ENV=development

# Database (Prisma)
# Example for PostgreSQL; update with your DB credentials
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/brickchain?schema=public"

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Resend (email service)
RESEND_API_KEY=your_resend_api_key_here

# JWT
JWT_SECRET=change_this_to_a_long_random_secret

# Store integration
PDF_MAX_MB=100
RATE_LIMIT_MAX=200
# Absolute path to store-cli (built with `cargo build --release`)
STORE_BIN=
# Directory where PDFs and sled DB live
STORE_DB_DIR=
# Pin to IPFS?
STORE_PIN_IPFS=false
# IPFS API URL
IPFS_URL=http://127.0.0.1:5001
# Publish on-chain via Polkadot.js?
CHAIN_PUBLISH=false
# Node WS endpoint
CHAIN_WS_URL=ws://127.0.0.1:9944
# Signer seed for development (never use in prod)
CHAIN_SEED=//Alice

# Optional AV scan
VIRUS_SCAN=false
CLAMSCAN_PATH=clamscan
